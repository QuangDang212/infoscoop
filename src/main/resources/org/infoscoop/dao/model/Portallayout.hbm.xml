<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.infoscoop.dao.model">
	<class
		name="Portallayout"
		table="IS_PORTALLAYOUTS"
	>
        <composite-id name="Id" class="PortallayoutPK">
            <key-property
                name="name"
                column="NAME"
                type="string"
            />
            <key-property
                name="Squareid"
                column="square_id"
                type="string"
                length="64"
            />
        </composite-id>

		<property
			name="Layout"
			column="LAYOUT"
			type="text"
			not-null="true"
		/>


	</class>	
</hibernate-mapping>
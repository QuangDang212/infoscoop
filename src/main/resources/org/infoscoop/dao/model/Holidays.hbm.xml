<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.infoscoop.dao.model">
	<class
		name="Holidays"
		table="IS_HOLIDAYS"
	>
		<meta attribute="sync-DAO">false</meta>
		<composite-id name="Id" class="HOLIDAYSPK">
			<key-property
				name="Lang"
				column="LANG"
				type="string"
			/>
			<key-property
				name="Country"
				column="COUNTRY"
				type="string"
			/>
            <key-property
                name="Squareid"
                column="square_id"
                type="string"
                length="64"
            />
		</composite-id>

		<property
			name="Data"
			column="DATA"
			type="string"
		/>
		<property
			name="Updatedat"
			column="UPDATED_AT"
			type="timestamp"
		/>
	</class>
	<sql-query name="is_holidays.copySquare">
		<![CDATA[
INSERT
	INTO
		IS_HOLIDAYS(
			country,
			lang,
			data,
			updated_at,
			square_id
		)
	SELECT
		h.country,
		h.lang,
		h.data,
		h.updated_at
		:squareId
	FROM
		IS_HOLIDAYS as h
	WHERE
		h.square_id = :defaultSquareId
		]]>
	</sql-query>
</hibernate-mapping>
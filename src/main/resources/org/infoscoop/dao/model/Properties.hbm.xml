<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.infoscoop.dao.model">
	<class
		name="Properties"
		table="IS_PROPERTIES"
	>
		<meta attribute="sync-DAO">false</meta>

        <composite-id name="Id" class="PropertiesPK">
            <key-property
                name="Id"
                column="ID"
                type="string"
            />
            <key-property
                name="Squareid"
                column="square_id"
                type="string"
                length="64"
            />
        </composite-id>

		<property
			name="Category"
			column="CATEGORY"
			type="string"
			not-null="true"
			length="128"
		/>
		<property
			name="Advanced"
			column="ADVANCED"
			type="integer"
			not-null="true"
			length="10"
		/>
		<property
			name="Value"
			column="VALUE"
			type="string"
			not-null="false"
			length="1024"
		/>
		<property
			name="Datatype"
			column="DATATYPE"
			type="string"
			not-null="true"
			length="128"
		/>
		<property
			name="Enumvalue"
			column="ENUMVALUE"
			type="string"
			not-null="false"
			length="1024"
		/>
		<property
			name="Required"
			column="REQUIRED"
			type="integer"
			not-null="true"
			length="10"
		/>
		<property
			name="Regex"
			column="REGEX"
			type="string"
			not-null="false"
			length="1024"
		/>
		<property
			name="Regexmsg"
			column="REGEXMSG"
			type="string"
			not-null="false"
			length="1024"
		/>
	</class>
	<sql-query name="is_properties.copySquare">
		<![CDATA[
INSERT
	INTO
		IS_PROPERTIES(
			id,
			category,
			advanced,
			value,
			datatype,
			enumvalue,
			required,
			regex,
			regexmsg,
			square_id
		)
	SELECT
		p.id,
		p.category,
		p.advanced,
		p.value,
		p.datatype,
		p.enumvalue,
		p.required,
		p.regex,
		p.regexmsg,
		:squareId
	FROM
		IS_PROPERTIES as p
	WHERE
		p.square_id = :defaultSquareId
		]]>
	</sql-query>
</hibernate-mapping>
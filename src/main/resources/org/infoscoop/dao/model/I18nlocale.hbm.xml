<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.infoscoop.dao.model">
	<class
		name="I18nlocale"
		table="IS_I18NLOCALES"
	>
		<meta attribute="sync-DAO">false</meta>
		<id
			name="Id"
			type="java.lang.Long"
			column="ID"
		>
			<generator class="native">
				<param name="sequence">is_i18nlocales_id_seq</param>
			</generator>
		</id>

		<property
			name="Type"
			column="TYPE"
			type="string"
			not-null="true"
			length="32"
		/>
		<property
			name="Country"
			column="COUNTRY"
			type="string"
			not-null="true"
			length="5"
		/>
		<property
			name="Lang"
			column="LANG"
			type="string"
			not-null="true"
			length="5"
		/>
        <property
            name="Squareid"
            column="square_id"
            type="string"
            not-null="true"
            length="64"
        />

	</class>
	<sql-query name="is_i18nlocales.copySquare">
		<![CDATA[
INSERT
	INTO
		IS_I18NLOCALES(
			type,
			country,
			lang,
			square_id
		)
	SELECT
		il.type,
		il.country,
		il.lang,
		:squareId
	FROM
		IS_I18NLOCALES as il
	WHERE
		il.square_id = :defaultSquareId
		]]>
	</sql-query>
</hibernate-mapping>
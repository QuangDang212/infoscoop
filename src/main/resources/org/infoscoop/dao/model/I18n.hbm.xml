<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.infoscoop.dao.model">
	<class
		name="I18n"
		table="IS_I18N"
	>
		<meta attribute="sync-DAO">false</meta>

		<meta attribute="sync-DAO">false</meta>

		<composite-id name="Id" class="I18NPK">
			<key-property
				name="Type"
				column="TYPE"
				type="string"
			/>
			<key-property
				name="Lang"
				column="LANG"
				type="string"
			/>
			<key-property
				name="Country"
				column="COUNTRY"
				type="string"
			/>
			<key-property
				name="Id"
				column="ID"
				type="string"
			/>
            <key-property
                name="Squareid"
                column="square_id"
                type="string"
                length="64"
            />
		</composite-id>

		<property
			name="Message"
			column="MESSAGE"
			type="string"
			not-null="true"
		/>
	</class>
	<sql-query name="is_i18n.copySquare">
		<![CDATA[
INSERT
	INTO
		IS_I18N(
			type,
			id,
			country,
			lang,
			message,
			square_id
		)
	SELECT
		i.type,
		i.id,
		i.country,
		i.lang,
		i.message,
		:squareId
	FROM
		IS_I18N as i
	WHERE
		i.square_id = :defaultSquareId
		]]>
	</sql-query>
</hibernate-mapping>